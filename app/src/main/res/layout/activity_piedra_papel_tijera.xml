<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PiedraPapelTijera">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:text="Piedra, Papel, Tijeras"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_margin="80dp"
        ></TextView>

    <TextView
        android:id="@+id/jugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:textSize="25sp"
        android:text="Jugador: 0"
        android:layout_marginTop="30dp"
        ></TextView>

    <TextView
        android:id="@+id/computadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/jugador"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:text="Computadora: 0"
        android:textSize="25sp"
        android:layout_margin="10dp"
        ></TextView>

    <ImageButton
        android:id="@+id/piedra"
        android:layout_width="125dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/computadora"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/papel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/piedra"
        android:scaleType="centerInside"
        android:background="@drawable/purple_frame"
        android:layout_margin="20dp"
        />

    <ImageButton
        android:id="@+id/papel"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/piedra"
        app:layout_constraintStart_toStartOf="@id/piedra"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/papel"
        android:background="@drawable/purple_frame"
        android:scaleType="centerInside"
        />

    <ImageButton
        android:id="@+id/tijeras"
        android:layout_width="130dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/papel"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/papel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/tijera"
        android:background="@drawable/purple_frame"
        android:scaleType="centerInside"
        />

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_marginTop="80dp"
        android:text="AtrÃ¡s"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>