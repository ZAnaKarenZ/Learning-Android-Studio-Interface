<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PiedraPapelTijera">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:text="Piedra, Papel, Tijeras"
        android:textSize="30sp"
        android:layout_margin="80dp"
        android:layout_marginStart="80dp"
        ></TextView>

    <Button
        android:id="@+id/piedra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_marginTop="80dp"
        android:text="Iniciar Sesión"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        />

    <Button
        android:id="@+id/papel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/piedra"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_marginTop="80dp"
        android:text="Iniciar Sesión"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        />

    <Button
        android:id="@+id/tijeras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/papel"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_marginTop="80dp"
        android:text="Iniciar Sesión"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:id="@+id/jugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tijeras"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:text="Jugador:"
        android:textSize="30sp"
        android:layout_margin="80dp"
        android:layout_marginStart="80dp"
        ></TextView>

    <TextView
        android:id="@+id/computadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/jugador"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:text="Computadora: "
        android:textSize="30sp"
        android:layout_margin="80dp"
        android:layout_marginStart="80dp"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>